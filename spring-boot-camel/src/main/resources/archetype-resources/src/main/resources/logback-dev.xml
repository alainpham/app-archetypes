  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>ts=%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} level=%highlight(%-5.5level) msg="%msg" traceId=%X{traceId:-} spanId=%X{spanId:-} logger=%logger thread="%thread"%n</pattern>
    </encoder>
  </appender>
  <!-- Uncomment the following and comment the previous if you want to have json logs -->

  <!--
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
  </appender>
-->

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
