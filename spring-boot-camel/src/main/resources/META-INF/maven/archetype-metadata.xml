<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
  name="fuse-standard-archetype"
  xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
    <requiredProperty key="cxfSupport">
      <defaultValue>false</defaultValue>
    </requiredProperty>
    <requiredProperty key="camel-sbsuffix">
      <defaultValue>.springboot</defaultValue>
    </requiredProperty>
    <requiredProperty key="camel-version">
      <defaultValue>4.0.0-M3</defaultValue>
    </requiredProperty>
    <requiredProperty key="spring-boot-version">
      <defaultValue>3.0.6</defaultValue>
    </requiredProperty>
    <requiredProperty key="swagger-ui-version">
      <defaultValue>3.52.5</defaultValue>
    </requiredProperty>
    <requiredProperty key="swagger-codegen-version">
      <defaultValue>3.0.42</defaultValue>
    </requiredProperty>
    <requiredProperty key="cxf-codegen-plugin-version">
      <defaultValue>4.0.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="logstash-encoder-version">
      <defaultValue>7.3</defaultValue>
    </requiredProperty>
    <requiredProperty key="webjars-locator-version">
      <defaultValue>0.46</defaultValue>
    </requiredProperty>
    <requiredProperty key="jmx-prometheus-javaagent-version">
      <defaultValue>0.18.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="project-reporting-outputEncoding">
      <defaultValue>UTF-8</defaultValue>
    </requiredProperty>
    <requiredProperty key="project-build-sourceEncoding">
      <defaultValue>UTF-8</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-compiler-target">
      <defaultValue>17</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-compiler-source">
      <defaultValue>17</defaultValue>
    </requiredProperty>
    <requiredProperty key="maven-compiler-plugin-version">
      <defaultValue>3.11.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="run-java-version">
      <defaultValue>1.3.8</defaultValue>
    </requiredProperty>
    <requiredProperty key="temurin-image-version">
      <defaultValue>17.0.7_7-jre</defaultValue>
    </requiredProperty>

    <!-- app vars -->
    <requiredProperty key="svc-ping-path">
      <defaultValue>/ping</defaultValue>
    </requiredProperty>
    <requiredProperty key="svc-definition-path">
      <defaultValue>/api-docs</defaultValue>
    </requiredProperty>
    <requiredProperty key="svc-camel-definition-path">
      <defaultValue>/api-docs</defaultValue>
    </requiredProperty>
    <requiredProperty key="svc-send-msg-path">
      <defaultValue>/send-msg</defaultValue>
    </requiredProperty>
    <requiredProperty key="swagger-ui-path">
      <defaultValue>/webjars/swagger-ui/index.html?url=/api-docs</defaultValue>
    </requiredProperty>

  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/main/docker</directory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/main/kube</directory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>**/framework/**</exclude>
        <exclude>**/favicon.ico</exclude>
        <exclude>**/camel-spring.xsd</exclude>
      </excludes>
    </fileSet>
    <fileSet filtered="false" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/framework/**</include>
        <include>**/favicon.ico</include>
        <include>**/camel-spring.xsd</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/fabric8</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>ReadMe.md</include>
      </includes>
    </fileSet>
    <fileSet filtered="false" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>.gitignore</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>